import 'package:flutter/material.dart';
import 'package:flutter_riverpod/flutter_riverpod.dart';
import 'package:supabase_flutter/supabase_flutter.dart';
import 'bootstrap.dart';
import 'screens/auth_screen.dart';
import 'screens/home_screen.dart';
import 'screens/plateau_editor_screen.dart';
import 'services/solution_matcher.dart'; // AJOUT pour prÃ©-chargement

void main() async {
  WidgetsFlutterBinding.ensureInitialized();

  try {
    await initSupabase();
  } catch (e) {
    // En cas d'erreur Supabase (ex: web), continuer quand mÃªme
    debugPrint('âš ï¸ Erreur initialisation Supabase: $e');
  }

  // âœ¨ PRÃ‰-CHARGEMENT des solutions en arriÃ¨re-plan
  // Cela prend ~20ms et Ã©vite le lag au premier appel
  debugPrint('ðŸ”„ PrÃ©-chargement des solutions pentomino...');
  Future.microtask(() {
    final startTime = DateTime.now();
    final count = solutionMatcher.totalSolutions;
    final duration = DateTime.now().difference(startTime).inMilliseconds;
    debugPrint('âœ… $count solutions chargÃ©es en ${duration}ms');
  });

  runApp(const ProviderScope(child: MyApp()));
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    // MODE DEBUG : Lancer directement l'Ã©diteur (dÃ©commenter pour tester)
    const bool debugEditorMode = true;

    return MaterialApp(
      title: 'Pentapol',
      theme: ThemeData(useMaterial3: true),
      // Routes pour navigation
      routes: {
        '/': (context) {
          if (debugEditorMode) {
            return const PlateauEditorScreen();
          }
          final client = Supabase.instance.client;
          return client.auth.currentUser == null
              ? const AuthScreen()
              : const HomeScreen();
        },
        '/editor': (context) => const PlateauEditorScreen(),
      },
    );
  }
}